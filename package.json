{
  "name": "angular2-dynamic-text-resize",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test --watch=false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "docker:build": "cross-conf-env docker build --tag $npm_package_config_imageName .",
    "docker:check": "cross-conf-env docker images | grep $npm_package_config_imageName | wc -l",
    "docker:run": "cross-conf-env docker run -it --volume=$(pwd):/usr/src/app --publish $npm_package_config_imagePort:4200 $npm_package_config_imageName bash",
    "docker:test": "cross-conf-env docker run -it --volume=$(pwd):/usr/src/app --publish $npm_package_config_imagePort:4200 $npm_package_config_imageName npm run lint && npm run test && npm run e2e",
    "docker:serve": "cross-conf-env docker run -it --volume=$(pwd):/usr/src/app --publish $npm_package_config_imagePort:4200 $npm_package_config_imageName ng serve --host 0.0.0.0",
    "quickstart": "npm install && npm run docker:build && npm run docker:serve"
  },
  "config": {
    "imageName": "angular2-dynamic-text-resize",
    "imagePort": "4242"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "core-js": "^2.5.4",
    "ng5-slider": "^1.1.0",
    "rxjs": "^6.0.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular/cli": "~6.1.2",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "cross-conf-env": "^1.1.2",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^2.0.5",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.3",
    "protractor": "^5.4.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
}
